# Database Configuration
DATABASE_URL=postgresql://species_user:secure_password@localhost:5432/species_monitoring
POSTGRES_USER=species_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=species_monitoring

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-also-change-this

# File Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_USE_TLS=true

# External APIs (Optional)
GEOCODING_API_KEY=your-geocoding-api-key
WEATHER_API_KEY=your-weather-api-key

# Environment
FLASK_ENV=development
DEBUG=true

# Docker specific
COMPOSE_PROJECT_NAME=species_monitoring